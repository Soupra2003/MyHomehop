<% layout('/layouts/template') %>

    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter {
            text-align: center;
            margin-right: 2rem;
            margin-top: 1rem;
            opacity: 0.5;
            font-size: 0.9rem;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .afterTax {
            display: none;
        }
        .tax_switch{
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.5rem;
            padding: 1rem;
            margin-left: 4rem;
        }
    </style>
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire-flame-curved"></i></div>
            <p>Trending</p>
        </div>
     
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Amazing views</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-water-ladder"></i></div>
            <p>Amazing pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Top cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tent"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-skiing"></i></div>
            <p>Ski-in/out</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-water"></i></div>
            <p>Lake</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boats</p>
        </div>
        <div class="tax_switch ">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total before taxes</label>
            </div>
        </div>
    </div>
    <div class="bodyContent mt-3">
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
            <%for(content of allcontent){%>
                <a href="/homehop/<%= content._id %>" class="showlinks">
                    <div class="card col">
                        <img src="<%= content.image.url %>" class="card-img-top" alt="property_image"
                            style="height: 18rem;">
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= content.title%>
                                </b> <br>
                                &#8377; <%= content.price.toLocaleString('en-IN') %> /night
                                    <i class="afterTax"> &nbsp; + 18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <% }%>
        </div>
    </div>

    <script>
        let taxSwitch = document.getElementById('flexSwitchCheckDefault')
        taxSwitch.addEventListener('click', () => {
            let afterTax = document.getElementsByClassName('afterTax')
            for (info of afterTax) {
                if (info.style.display != 'inline') {
                    info.style.display = 'inline'
                }
                else {
                    info.style.display = 'none'
                }
            }
        })
    </script>